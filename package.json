{
  "name": "@tapico/node-openfeature-posthog",
  "version": "1.0.0",
  "description": "OpenFeature provider for the PostHog feature flags solution",
  "private": false,
  "author": "Tapico <engineering@tapico.io>",
  "keywords": [
    "openfeature",
    "opentelemetry",
    "feature",
    "feature flag"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tapico/node-posthog-openfeature.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "format": "prettier src/**/*.ts --write",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "test": "jest",
    "version": "pnpm run version:update",
    "version:update": "node ./scripts/version-update.js"
  },
  "dependencies": {
    "@openfeature/core": "^1.1.0",
    "@openfeature/server-sdk": "^1.13.4",
    "@opentelemetry/api": "^1.8.0",
    "posthog-node": "^4.0.0"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.8.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-serializer-path": "^0.1.15",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.8.0"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "publishConfig": {
    "@tapico:registry": "https://registry.npmjs.org/"
  }
}
